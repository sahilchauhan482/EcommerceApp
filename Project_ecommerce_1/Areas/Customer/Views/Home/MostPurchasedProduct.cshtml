<h2>Most Purchased Product</h2>

@if (ViewBag.MostPurchasedProduct != null)
{
    <div>
        <h4>Product Details</h4>
        <p>Title: @ViewBag.MostPurchasedProduct.Title</p>
        <p>Description: @ViewBag.MostPurchasedProduct.Description</p>
        <!-- Add more details as needed -->

        <h4>Purchase Count</h4>
        <p>@ViewBag.PurchaseCount purchases</p>
    </div>
}
else
{
    <p>No purchases found for the current user.</p>
}

<p>
    <a asp-action="Index">Back to Home</a>
</p>