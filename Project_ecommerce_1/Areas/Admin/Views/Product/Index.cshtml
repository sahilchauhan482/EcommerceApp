<div class="row">
    <div class="col-9">
        <h2 class="text-info">Product list</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-primary form-control">
            <i class="fas fa-plus-square fa-spin "></i> &nbsp; Add New Product
        </a>
    </div>
</div>
<div class=" container rounded border p-2 m-2">
    <table id="tblData" class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

