@model Project_ecommerce_1.Model.Company
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Company" : "New Company";
}


<form method="post">
    <div class="row">
        <div class="col-12 text-primary">
            <h2>@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class=" form-group row p-2 m-2">

                <div class="col-4">
                    <label asp-for="@Model.Name"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row p-2 m-2">

                <div class="col-4">
                    <label asp-for="@Model.StreetAdress"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.StreetAdress" class="form-control" />
                    <span asp-validation-for="@Model.StreetAdress" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row p-2 m-2">

                <div class="col-4">
                    <label asp-for="@Model.City"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.City" class="form-control" />
                    <span asp-validation-for="@Model.City" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row p-2 m-2">

                <div class="col-4">
                    <label asp-for="@Model.State"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.State" class="form-control" />
                    <span asp-validation-for="@Model.State" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row p-2 m-2">

                <div class="col-4">
                    <label asp-for="@Model.PostalCode"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.PostalCode" class="form-control" />
                    <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row p-2 m-2">

                <div class="col-4">
                    <label asp-for="@Model.PhoneNumber"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row p-2 m-2">

                <div class="col-4">
                    <label asp-for="@Model.IsAuthorizedCompany"> </label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="@Model.IsAuthorizedCompany" />
                    <span asp-validation-for="@Model.IsAuthorizedCompany" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">

                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="Editbutton" />
                    }
                    else
                    {
                        <partial name="_Savebutton" />
                    }
                </div>
            </div>




        </div>


    </div>
</form>

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
}